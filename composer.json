{
    "name": "dnsl48/hydrogen",
    "description": "Declarative data definition framework for PHP (Schemas, DTOs, Atomic types, Native Objects)",
    "type": "metapackage",
    "license": "MIT/Apache-2.0",
    "authors": [
        {
            "name": "Serge Latyntsev",
            "email": "dnsl48@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "./packages/hydrogen-core"
        },
        {
            "type": "path",
            "url": "./packages/hydrogen-factorio"
        },
        {
            "type": "path",
            "url": "./packages/hydrogen-vocab-native"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.3",
        "dnsl48/hydrogen-core": "*",
        "dnsl48/hydrogen-factorio": "*",
        "dnsl48/hydrogen-vocab-native": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage phpunit",
        "debug": "XDEBUG_MODE=debug,develop XDEBUG_SESSION=1 phpunit --no-coverage",
        "phpstan": "phpstan"
    }
}